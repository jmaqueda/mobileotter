<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/about_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dining_about"
        />

    <Button
        android:id="@+id/OE_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/OE_button" />
    <Button
        android:id="@+id/DC_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/DC_button" />
    <Button
        android:id="@+id/Montes_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Montes_button" />
</LinearLayout>